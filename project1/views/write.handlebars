<h1>[{{ title }}]</h1>
<div>
    <form name="boardForm" method="post" action="/write">
        {{!-- title --}}
        <div>
            <label>제목</label>
            <input type="text" name="title" placeholder="제목을 작성해주세요" value="" />
        </div>

        {{!-- user --}}
        <div>
            <label>이름</label>
            <input type="text" name="name" placeholder="이름을 작성해주세요" value="" />
        </div>
        <div>
            <label>비밀번호</label>
            <input type="password" name="password" placeholder="비밀번호를 작성해주세요" value="" />
        </div>
        
        {{!-- main text --}}
        <div>
            <label>글을 작성해주세요</label><br />
            <textarea placeholder="글을 작성해주세요" name="content" cols="50" rows="10"></textarea>
        </div>
        <br />
        <button type="submit">저장</button>
        <button type="button" onclick="location.href='/'">취소</button>
    </form>
</div>
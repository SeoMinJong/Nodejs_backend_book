{{!-- main section --}}
<h1>{{title}}</h1>
{{#with post}}
<h2 class="text-xl">제목</h2>
<div>
    작성자 : <b>{{name}}</b>
</div>
<div>
    조회수 : {{hits}} | 작성일시 : {{dateString createdDt}}
    <button type="button" onclick="modifyPost()">수정</button>
    <button type="button" onclick="deletePost()">수정</button>
</div>

<div>
    <pre>{{content}}!</pre>
</div>
{{/with}}

{{!-- comment write section --}}
<section>
    <div>
        <h3>댓글 3개</h3>
    </div>
    <form method="post" action="/write-comment">
        <div>
            <input type="text" name="name" placeholder="이름" />
            <input type="password" name="password" placeholder="비밀번호">
        </div>
        <div>
            <textarea cols="40" rows="3" name="content" placeholder="댓글을 입력해주세요"></textarea>
        </div>
        <br />
        <br />
        <button>댓글 쓰기</button>
    </form>
</section>

{{!-- comment list section --}}
<section>
    <div>
        <div>
            작성자 : <b>댓글 작성자1</b>
        </div>
        <div>
            작성일시 : 2023-10-24 16:05:00
            <button onclick="deleteComment('1')">삭제</button>
        </div>
    </div>
    <div>
        <pre>{{comment}}</pre>
    </div>
</section>

{{!-- footer section --}}
<footer>
    <div>
        <a href="/">목록으로</a>
    </div>
</footer>

<script>
    const postOption = {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
    }
    
    async function modifyPost() {
        const password = prompt("패스워드를 입력해주세요.");
        if (!password){
            return;
        }

        const result = await fetch("/check-password", {
            ...postOption,
            body: JSON.stringify({ id:"{{post._id}}", password })
        });

        const data = await result.json();

        if (data.isExist){
            document.location = "/modify/{{post._id}}"
        }else{
            alert("패스워드가 올바르지 않습니다.");
        }
    }

